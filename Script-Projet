def cutString(String input) {
    return input.split(" \\| ")
}

def verifChallengeMois(String mois, String challenge) {
    def partiesChallenge = cutString(challenge)
    if (partiesChallenge[0] != mois || challenge == "Aucun") {
        return false
    }
    return true
}

def calculStat(int nbTache) {
    def total = 3
    def pourcentage = (nbTache / total) * 100
    return String.format("%.2f", pourcentage)
}

def printTempsRestant(int today, String mois) {
    if (today < 16) {
        echo "Vous etes le ${today} du mois de ${mois}. Vous avez le temps."
    } else {
        echo "Vous etes le ${today} du mois ${mois}. Depechez-vous."
    }
}

def printAvancement(String mois, String c1, String c2, String c3, int jour) {
    def nbTaches = 0
    if (verifChallengeMois(mois, c1)) {
        nbTaches = nbTaches + 1
    }
    if (verifChallengeMois(mois, c2) && c2 != c1 && c2 != c3) {
        nbTaches = nbTaches + 1
    }
    if (verifChallengeMois(mois, c3) && c3 != c1 && c3 != c2) {
        nbTaches = nbTaches + 1
    }
    def stat = calculStat(nbTaches)
    printTempsRestant(jour , mois)
    echo "Vous etes a ${stat}% de vos taches pour le mois de ${mois}"
}

def calculIMC(int taillecm, int poids){
  def taille = taillecm/100
  imc = poids/(taille**2)
  if (imc < 18.5){
      echo "Vous avez un IMC de ${imc}. Vous etes trop maigre"
  }
  else if (18.5 <= imc && imc < 25){
      echo "Vous avez un IMC de ${imc}. Vous etes normal"
  }
  else if (25 <= imc && imc < 30){
      echo "Vous avez un IMC de ${imc}. Vous etes en surpoids"
  }
  else {
      echo "Vous avez un IMC de ${imc}. Vous etes obese"
  }
}
